# Python AI Engine Environment Configuration (Firebase Version)

# gRPC Server Configuration
GRPC_PORT=50051
GRPC_MAX_WORKERS=10

# LLM API Keys
OPENAI_API_KEY=your-openai-api-key-here
GOOGLE_API_KEY=your-google-api-key-here

# Firebase Configuration (replacing MongoDB)
FIREBASE_PROJECT_ID=adgenius-demo-project
# FIREBASE_SERVICE_ACCOUNT_PATH=/path/to/service-account-key.json
FIRESTORE_EMULATOR_HOST=localhost:8080

# Redis Configuration (for caching and background tasks)
REDIS_URL=redis://localhost:6379/1

# Qdrant Configuration (for vector search if needed)
QDRANT_HOST=localhost
QDRANT_PORT=6333

# Observability
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_SERVICE_NAME=ceaser-ad-business-ai-engine

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# LangChain Configuration
LANGCHAIN_VERBOSE=false
LANGCHAIN_CALLBACKS_BACKGROUND=true

# AI Model Configuration
DEFAULT_TEXT_MODEL=gpt-3.5-turbo
DEFAULT_IMAGE_MODEL=dall-e-3
DEFAULT_EMBEDDING_MODEL=text-embedding-ada-002

# Generation Limits
MAX_CREATIVE_VARIATIONS=5
MAX_GENERATION_RETRIES=3
GENERATION_TIMEOUT_SECONDS=60

# Caching Configuration
CACHE_ENABLED=true
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE=1000
