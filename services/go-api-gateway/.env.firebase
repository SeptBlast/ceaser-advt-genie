# ===================================
# AdGenius Multi-Tenant Platform
# Go API Gateway Environment Configuration (Firebase Version)
# ===================================

# ===================================
# Application Configuration
# ===================================
APP_NAME=adgenius-api-gateway
APP_VERSION=1.0.0
GIN_MODE=debug
PORT=8000
LOG_LEVEL=info

# ===================================
# Firebase Configuration
# ===================================
# Firebase project ID
FIREBASE_PROJECT_ID=adgenius-demo-project

# Firebase service account key file path (for production)
# FIREBASE_SERVICE_ACCOUNT_PATH=/path/to/service-account-key.json

# Firestore emulator configuration (for development)
FIRESTORE_EMULATOR_HOST=localhost:8080

# ===================================
# Redis Cloud Configuration
# ===================================
# Replace with your Redis Cloud connection details
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_USERNAME=
REDIS_PASSWORD=
REDIS_TLS=false

# ===================================
# AI Engine gRPC Configuration
# ===================================
AI_ENGINE_ADDR=localhost:50051
AI_ENGINE_ADDRESS=localhost:50051
AI_ENGINE_TIMEOUT=30s

# ===================================
# CORS Configuration
# ===================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5173,http://localhost:9099

# ===================================
# Rate Limiting Configuration
# ===================================
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=20

# ===================================
# Content Security Configuration
# ===================================
MAX_REQUEST_SIZE=10MB
MAX_FILE_UPLOAD_SIZE=50MB

# ===================================
# Observability Configuration
# ===================================
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_SERVICE_NAME=ceaser-ad-business-api-gateway

# ===================================
# Feature Flags
# ===================================
ENABLE_AI_GENERATION=true
ENABLE_ANALYTICS=true
ENABLE_BILLING=false
ENABLE_USER_MANAGEMENT=true

# ===================================
# Cache Configuration
# ===================================
CACHE_TTL_CAMPAIGNS=300
CACHE_TTL_CREATIVES=180
CACHE_TTL_ANALYTICS=60

# ===================================
# External Service URLs
# ===================================
FRONTEND_URL=http://localhost:5173
WEBHOOK_BASE_URL=http://localhost:8000/webhooks
