# ===================================
# AdGenius Multi-Tenant Platform
# Go API Gateway Environment Configuration
# ===================================

# ===================================
# Application Configuration
# ===================================
APP_NAME=adgenius-api-gateway
APP_VERSION=1.0.0
GIN_MODE=debug
PORT=8080

# ===================================
# MongoDB Atlas Configuration
# ===================================
# Replace with your MongoDB Atlas connection string
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/
MONGODB_DATABASE=adgenius

# Individual MongoDB connection parameters (for compatibility)
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_USERNAME=
MONGO_PASSWORD=
MONGO_AUTH_SOURCE=admin
MONGO_DB_NAME=adgenius

# ===================================
# Redis Cloud Configuration
# ===================================
# Replace with your Redis Cloud connection details
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_USERNAME=
REDIS_PASSWORD=
REDIS_TLS=false

# ===================================
# AI Engine gRPC Configuration
# ===================================
AI_ENGINE_ADDR=localhost:50051
AI_ENGINE_ADDRESS=localhost:50051
AI_ENGINE_TIMEOUT=30s

# ===================================
# JWT Authentication Configuration
# ===================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY=24h
JWT_ISSUER=adgenius-api

# ===================================
# Multi-Tenancy Configuration
# ===================================
# Default tenant for development
DEFAULT_TENANT_ID=dev-tenant
TENANT_ISOLATION_MODE=database-per-tenant

# ===================================
# Rate Limiting Configuration
# ===================================
RATE_LIMIT_REQUESTS_PER_MINUTE=1000
RATE_LIMIT_REQUESTS_PER_HOUR=10000

# ===================================
# Logging Configuration
# ===================================
LOG_LEVEL=info
LOG_FORMAT=json

# ===================================
# CORS Configuration
# ===================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://app.adgenius.com
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Tenant-ID,X-Requested-With

# ===================================
# External Services Configuration
# ===================================
# OpenAI Configuration (for AI Engine)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# ===================================
# Monitoring & Observability
# ===================================
ENABLE_METRICS=true
ENABLE_TRACING=true
JAEGER_ENDPOINT=http://localhost:14268/api/traces
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_SERVICE_NAME=ceaser-ad-business-api

# ===================================
# Security Configuration
# ===================================
BCRYPT_COST=12
SESSION_SECRET=your-session-secret-change-this-in-production

# ===================================
# Development Configuration
# ===================================
# Set to true for development features
DEBUG_MODE=true
ENABLE_PPROF=false
ENABLE_SWAGGER=true

# ===================================
# Production Override Examples
# ===================================
# Uncomment and modify for production deployment

# Production MongoDB Atlas
# MONGODB_URI=mongodb+srv://prod-user:strong-password@prod-cluster.mongodb.net/adgenius?retryWrites=true&w=majority

# Production Redis Cloud
# REDIS_HOST=redis-12345.c1.us-east-1-1.ec2.cloud.redislabs.com
# REDIS_PORT=12345
# REDIS_PASSWORD=your-redis-cloud-password
# REDIS_TLS=true

# Production AI Engine
# AI_ENGINE_ADDR=ai-engine.production.com:50051

# Production Security
# JWT_SECRET=your-very-long-and-random-jwt-secret-for-production
# SESSION_SECRET=your-very-long-and-random-session-secret-for-production

# Production Logging
# LOG_LEVEL=warn
# GIN_MODE=release
