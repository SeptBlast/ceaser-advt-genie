# Development Dockerfile for React + Vite Application
# This version includes hot reload and development tools

FROM node:22-alpine

# Set working directory
WORKDIR /app

# Install development dependencies
RUN apk add --no-cache git

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev dependencies)
RUN npm ci

# Copy source code
COPY . .

# Add labels
LABEL maintainer="Ceaser Ad Business Team"
LABEL description="React + Vite Frontend for Ceaser Ad Business (Development)"
LABEL version="1.0.0-dev"

# Create non-root user
RUN addgroup -g 1001 -S nodejs && \
    adduser -S react -u 1001 -G nodejs

# Change ownership
RUN chown -R react:nodejs /app

# Switch to non-root user
USER react

# Expose ports (3000 for app, 3001 for HMR)
EXPOSE 3000 3001

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=10s --retries=3 \
    CMD wget --no-verbose --tries=1 --spider http://localhost:3000/ || exit 1

# Start development server with hot reload
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
